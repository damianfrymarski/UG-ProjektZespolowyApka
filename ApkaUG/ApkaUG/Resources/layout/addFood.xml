<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
        android:text="Ilość produktu w g/ml"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grams" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gramsInput"/>
    <TextView
        android:text="Ilość kcal na 100g/ml"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kcal100g" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kcalInput"/>
    <TextView
        android:text="Ilość węglowodanów na 100g/ml"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carb100g" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carbInput"/>
    <TextView
        android:text="Ilość tłuszczy na 100g/ml"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fat100g" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fatInput"/>
    <TextView
        android:text="Ilość białka na 100g/ml"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proteines100g"
        />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proteinInput"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <Button android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Skanuj"
           android:id="@+id/scan"
           android:layout_weight="1"/>
        <Button android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Wyszukaj"
           android:id="@+id/databaseSearch"
           android:layout_weight="1"/>
        <Button android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Zatwierdź"
           android:id="@+id/enter"
           android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
